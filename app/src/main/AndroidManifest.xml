<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.z.conchitroller">

    <uses-sdk tools:overrideLibrary="com.macroyau.blue2serial" />

    <application
        android:name=".Conchitroller"
        android:allowBackup="true"
        android:icon="@drawable/ic_shell"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ColorPicker"
            android:label="@string/title_activity_color_picker"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".BelenService"
            android:exported="false"></service>
    </application>

</manifest>